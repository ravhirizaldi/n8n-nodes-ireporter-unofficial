{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["es2019"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["nodes/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
